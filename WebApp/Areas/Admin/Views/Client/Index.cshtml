@model IEnumerable<DomainModels.Entities.Client>

@using Vereyon.Web;

@{
    ViewBag.Title = "Clients List";
}

<h3>Clients List</h3>

<p>
    @Html.ActionLink("Add New Client", "Create", null, new { @class = "btn btn-default btn-sm" })
</p>

@Html.RenderFlashMessages()

@if (Model.Count() > 0)
{
    <table class="table" style="border-collapse: collapse;border: 1px solid black;" border="1">
        <tr style="background-color: #f2f2f2;">
            <th>
                Client Name
            </th>
            <th>
                Skype ID
            </th>
            <th>
                TimeZone
            </th>
            <th>
                Client's Email ID
            </th>
            <th>
                Added on Email ID
            </th>
            <th>
                Added on Skype ID
            </th>
            <th>
                First Added By
            </th>
            <th>
                Client Contact No.
            </th>
            <th>
                Profile Image
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align:middle;">
                    @Html.ActionLink(item.ClientName, "Details", new { id = item.ClientId })
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.ClientSkypeID)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.TimeZone)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.ClientEmailID)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.AddedOnEmail)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.AddedOnSkype)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.HiredBy)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>
                <td style="vertical-align:middle;">
                    @if (!string.IsNullOrEmpty(item.ProfileImage))
                    {<img src="@Common.ProfileImagePath@item.ClientId/@item.ProfileImage" style="height:50px;width:50px;" />}
                    else
                    {<img src="@Common.ProfileImagePath/sample.jpg" style="height:50px;width:50px;" />}
                </td>
            </tr>
        }

    </table>
}
else
{
    <table class="table">
        <tr>
            <th>
                No Record(s) Found.
            </th>
        </tr>
    </table>
}